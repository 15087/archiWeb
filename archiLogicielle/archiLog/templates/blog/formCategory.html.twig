{% extends 'base.html.twig' %}

{% form_theme formCategory 'bootstrap_4_layout.html.twig'%}
{% block title %}Création d'une catégorie{% endblock %}


{% block body %}
        <h1> Création d'une catégorie</h1>

  {{ form_start(formCategory) }}

  {{ form_row(formCategory.title, {'attr':{'placeholder': "Titre de la catégorie"}}) }}
  {{ form_row(formCategory.description, {'attr':{'placeholder': "Description de la catégorie"}}) }}


  {{ form_widget(formCategory) }}

  <button type="submit" class="btn btn-success">
    
    {% if editMode %}
      Modifier
    {% else %}
      Ajouter 
    {% endif %}
  </button>

  <a href="{{ path('home') }}" class="btn btn-primary">Annuler </a>

  {{ form_end(formCategory) }}

{% endblock %}